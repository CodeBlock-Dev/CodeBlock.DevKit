<div id="blazor-error-ui" class="reconnect-modal">
    <div class="d-flex flex-column min-vh-100 justify-content-center align-items-center">
        <div class="card bg-form shadow mb-5 min-height-20rem width-xs-90 width-sm-40 width-md-40">
            <div class="card-header text-warning text-center h2 p-3">@Localizer[BlazorResource.Connection_State_Error_Title]</div>
            <div class="card-body p-3 text-center text-white-50">
                <p>
                    @Localizer[BlazorResource.Connection_State_Error_Content]
                </p>
                <i class="bi bi-exclamation-triangle-fill opacity-30" style="font-size:8rem;"></i>
            </div>
            <div class="card-footer">
                <a onclick="location.reload()" class="btn btn-warning d-block">@Localizer[BlazorResource.Connection_State_Reload_Btn]</a>
            </div>
        </div>
    </div>
</div>

<div id="components-reconnect-modal" class="reconnect-modal components-reconnect-hide">

    <div class="show">
        <div class="d-flex flex-column min-vh-100 justify-content-center align-items-center">
            <div class="card bg-form shadow mb-5 min-height-20rem width-xs-90 width-sm-40 width-md-40">
                <div class="card-header text-warning text-center h2 p-3">@Localizer[BlazorResource.Connection_State_Disconnect_Title]</div>
                <div class="card-body p-3 text-center text-white-50">
                    <p>
                        @Localizer[BlazorResource.Connection_State_Disconnect_Title]
                    </p>
                    <i class="bi bi-exclamation-triangle-fill opacity-30" style="font-size:8rem;"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="failed">
        <div class="d-flex flex-column min-vh-100 justify-content-center align-items-center">
            <div class="card bg-form shadow mb-5 min-height-20rem width-xs-90 width-sm-40 width-md-40">
                <div class="card-header text-warning text-center h2 p-3">@Localizer[BlazorResource.Connection_State_Reconnect_Title]</div>
                <div class="card-body p-3 text-center text-white-50">
                    <p>
                        @Localizer[BlazorResource.Connection_State_Reject_Content]
                    </p>
                    <i class="bi bi-exclamation-triangle-fill opacity-30" style="font-size:8rem;"></i>
                </div>
                <div class="card-footer">
                    <a onclick="window.Blazor.reconnect()" class="btn btn-warning d-block">@Localizer[BlazorResource.Connection_State_Retry_Btn]</a>
                </div>
            </div>
        </div>
    </div>

    <div class="rejected">
        <div class="d-flex flex-column min-vh-100 justify-content-center align-items-center">
            <div class="card bg-form shadow mb-5 min-height-20rem width-xs-90 width-sm-40 width-md-40">
                <div class="card-header text-warning text-center h2 p-3">@Localizer[BlazorResource.Connection_State_Reject_Title]</div>
                <div class="card-body p-3 text-center text-white-50">
                    <p>
                        @Localizer[BlazorResource.Connection_State_Reject_Content]
                    </p>
                    <i class="bi bi-exclamation-triangle-fill opacity-30" style="font-size:8rem;"></i>
                </div>
                <div class="card-footer">
                    <a onclick="location.reload()" class="btn btn-warning d-block">@Localizer[BlazorResource.Connection_State_Retry_Btn]</a>
                </div>
            </div>
        </div>
    </div>
</div>