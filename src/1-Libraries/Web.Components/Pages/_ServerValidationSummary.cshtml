@{
    var errors = new List<string>();
    if (ViewData["Errors"] != null)
        errors = (List<string>)ViewData["Errors"];

}

@if (ViewData["Message"] != null)
{
    <div class="border border-danger text-danger">
        <h6>@ViewData["Message"]</h6>
        @if (errors.Count > 0)
        {
            <ul>
                @foreach (var error in errors)
                {
                    <li>@error</li>
                }
            </ul>
        }
    </div>
}