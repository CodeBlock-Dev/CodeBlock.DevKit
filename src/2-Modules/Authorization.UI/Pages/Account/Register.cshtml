@page "/register"
@model CodeBlock.DevKit.Authorization.UI.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "ایجاد پروفایل";
    Layout = "_Layout";
}

<div class="card bg-form text-white-50 shadow min-height-20rem width-xs-90 width-sm-40 width-md-40">
    <div class="card-header h2 p-3">ابتدا یه پروفایل ایجاد کن!</div>
    <div class="card-body p-3">
        <form method="post">

            <partial name="_ServerValidationSummary" />

            @Html.AntiForgeryToken()

            <div class="form-group p-2">
                <input asp-for="RegisterUserRequest.Email" class="form-control" placeholder="ایمیل" />
                <span asp-validation-for="RegisterUserRequest.Email" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <input asp-for="RegisterUserRequest.Password" class="form-control" placeholder="رمز عبور" />
                <span asp-validation-for="RegisterUserRequest.Password" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <button id="loginBtn" type="submit" class="btn btn-success">ایجاد پروفایل</button>
                <a class="btn btn-outline-primary" href="/login">پروفایل دارم</a>
            </div>
        </form>
    </div>
    <div class="card-footer text-secondary fw-light">
        <small><i class="bi bi-info-circle-fill"></i> در مرحله ی بعدی اطلاعات پروفایلتو تکمیل میکنی</small>
    </div>
</div>