@page "/login"
@model CodeBlock.DevKit.Authorization.UI.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}


<div class="card bg-form text-white-50 shadow mb-5 min-height-20rem width-xs-90 width-sm-40 width-md-40">
    <div class="card-header h2 p-3">Login to dashboard</div>
    <div class="card-body p-3">
        <form method="post">

            <partial name="_ServerValidationSummary" />

            @Html.AntiForgeryToken()

            <div class="text-warning">
                <strong class="text-secondary">Username =</strong> admin@test.com
                <strong class="text-secondary">Password =</strong> 1234
            </div>

            <div class="form-group p-2">
                <input asp-for="VerifyUserPasswordRequest.Email" class="form-control" placeholder="Username" />
                <span asp-validation-for="VerifyUserPasswordRequest.Email" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <input asp-for="VerifyUserPasswordRequest.Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="VerifyUserPasswordRequest.Password" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <button id="loginBtn" type="submit" class="btn btn-success">login</button>
            </div>
        </form>
    </div>
</div>
