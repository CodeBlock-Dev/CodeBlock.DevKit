@using BlazorServerApp.Pages.Shared
@using Microsoft.AspNetCore.Hosting
@using Microsoft.AspNetCore.Mvc.ViewEngines
@using CodeBlock.DevKit.Web.Localization
@inject LocalizationSettings LocalizationSettings

<!DOCTYPE html>
<html dir="@LocalizationSettings.GetLanguageDirection(Thread.CurrentThread.CurrentCulture.Name)" lang="@Thread.CurrentThread.CurrentCulture.Name">
<head>
    <meta charset="utf-8" />
    <meta name="theme-color" content="#0c62fa" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="apple-touch-icon" sizes="180x180" href="/images/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/images/favicon/safari-pinned-tab.svg" color="#3B32FF">
    <meta name="msapplication-TileColor" content="#3B32FF">
    <meta name="theme-color" content="#3B32FF">
    <title>@ViewData["Title"]</title>
    <base href="~/" />
    <link href="css/nspa.devkit.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="css/nspa.min.css" rel="stylesheet" asp-append-version="true" />
</head>
<body class="bg-primary">

    <div class="d-flex flex-column min-vh-100 justify-content-center align-items-center">
        @RenderBody()
    </div>

    <script src="~/js/nspa.devkit.min.js" asp-append-version="true"></script>
    <script src="~/js/nspa.min.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

