{
  "AllowedHosts": "*",
  "MongoDB": {
    "Connection": "mongodb://localhost:27017",
    "DatabaseName": "BlazorServerApp"
  },
  "Authorization": {
    "AdminRole": "admin",
    "DefaultRole": "user",
    "AdminUser": {
      "Email": "admin@test.com",
      "Password": "1234"
    }
  },
  "Localization": {
    "Languages": [
      {
        "Name": "English",
        "Code": "en",
        "IsDefault": true
      },
      {
        "Name": "Persian",
        "Code": "fa"
      }
    ]
  },
  "Serilog": {
    "Using": [ "Serilog.Exceptions" ],
    "Enrich": [ "WithExceptionDetails" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.Hosting.Lifetime": "Error"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": { "expression": "@mt = 'An unhandled exception has occurred while executing the request.'" }
      }
    ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./bin/logs/Logs.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ]
  },
  "Metric": {
    "StandAloneKestrelServerEnabled": false,
    "Port": 5025,
    "Url": "/metrics",
    "Hostname": "+",
    "HttpMetricsEnabled": true,
    "SuppressDefaultMetrics": false
  },
  "CookieAuthentication": {
    "CookieName": "BlazorServerApp.AuthCookie",
    "CookieHttpOnly": true,
    "LoginPath": "/login",
    "LogoutPath": "/logout",
    "ExpireFromMinute": 120,
    "SlidingExpiration": false,
    "AllowRefresh": true
  },
  "Caching": {
    "CacheTimeInMinutes": 60,
    "Enabled": true
  },
  "Optimization": {
    "Enabled": true,
    "EnableCaching": true,
    "EnableMemoryCache": true,
    "EnableDiskCache": false,
    "AllowEmptyBundle": true,
    "BundledCssFiles": [
      {
        "BundledFile": "/css/spa.min.css",
        "FilesToBundle": [ "_content/CodeBlock.DevKit.Web.Blazor.Server/css/loading.css", "_content/CodeBlock.DevKit.Web.Blazor.Server/css/animate.min.css", "_content/Blazored.Toast/blazored-toast.min.css", "_content/Blazored.Modal/blazored-modal.css", "_content/CodeBlock.DevKit.Web.Blazor.Server/icons/bootstrap-icons/font/bootstrap-icons.min.css", "_content/CodeBlock.DevKit.Web.Blazor.Server/css/component.css", "_content/CodeBlock.DevKit.Web.Blazor.Server/css/bootstrap.min.css", "BlazorServerApp.styles.css", "css/app.css" ]
      },
      {
        "BundledFile": "/css/nspa.min.css",
        "FilesToBundle": [ "_content/CodeBlock.DevKit.Web.Blazor.Server/css/loading.css", "_content/CodeBlock.DevKit.Web.Blazor.Server/css/animate.min.css", "_content/CodeBlock.DevKit.Web.Blazor.Server/icons/bootstrap-icons/font/bootstrap-icons.min.css", "_content/CodeBlock.DevKit.Web.Blazor.Server/css/component.css", "_content/CodeBlock.DevKit.Web.Blazor.Server/css/bootstrap.min.css", "BlazorServerApp.styles.css", "css/app.css" ]
      }
    ],
    "BundledJsFiles": [
      {
        "BundledFile": "/js/spa.min.js",
        "FilesToBundle": [ "_content/CodeBlock.DevKit.Web.Blazor.Server/js/jquery.min.js", "_content/CodeBlock.DevKit.Web.Blazor.Server/js/popper.min.js", "_content/CodeBlock.DevKit.Web.Blazor.Server/js/bootstrap.min.js", "_content/Blazored.Modal/blazored.modal.js", "_content/Blazorise.Animate/blazorise.animate.js", "_content/CodeBlock.DevKit.Web.Blazor.Server/js/component.js", "js/app.js" ]
      },
      {
        "BundledFile": "/js/nspa.min.js",
        "FilesToBundle": [ "_content/CodeBlock.DevKit.Web.Blazor.Server/js/jquery.min.js", "_content/CodeBlock.DevKit.Web.Blazor.Server/js/jquery.validate.min.js", "_content/CodeBlock.DevKit.Web.Blazor.Server/js/jquery.validate.unobtrusive.min.js", "_content/CodeBlock.DevKit.Web.Blazor.Server/js/jquery.unobtrusive-ajax.min.js", "_content/CodeBlock.DevKit.Web.Blazor.Server/js/popper.min.js", "_content/CodeBlock.DevKit.Web.Blazor.Server/js/bootstrap.min.js", "_content/CodeBlock.DevKit.Web.Blazor.Server/js/component.js", "js/app.js" ]
      }
    ]
  }
}