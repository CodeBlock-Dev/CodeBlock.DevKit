<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <Authorizing>
                    <Error ShowIndexLink=false Title="Authorizing ..." Message="We are authorizing, please wait." />
                </Authorizing>
                <NotAuthorized>
                    <RedirectToLogin />
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <Error Title="Page not found!" Message="Sorry! It seems the page that you are looking for, does not exist." />
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
