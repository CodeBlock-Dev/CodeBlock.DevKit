{
  "AllowedHosts": "*",
  "Email": {
    "SmtpServer": "mail.test.com",
    "SmtpPort": 25,
    "SmtpUser": "mail@test.com",
    "SmtpPassword": "1234",
    "EnableSsl": true
  },
  "Swagger": {
    "Title": "WebApiApp Api Documentation",
    "Version": "v1"
  },
  "JwtAuthentication": {
    "Key": "WebApiApp-25ft53d3-e5b5-49a0-a5b0-cc05a50568wp",
    "Issuer": "http://api.test.com",
    "ExpireDays": 30
  },
  "MongoDB": {
    "Connection": "mongodb://localhost:27017",
    "DatabaseName": "WebApiApp"
  },
  "Authorization": {
    "AdminRole": "admin",
    "DefaultRole": "user",
    "AdminUser": {
      "Email": "admin@test.com",
      "Password": "1234"
    }
  },
  "Localization": {
    "Languages": [
      {
        "Name": "English",
        "Code": "en-US",
        "IsDefault": true
      },
      {
        "Name": "Persian",
        "Code": "fa-IR"
      }
    ]
  },
  "Serilog": {
    "Using": [ "Serilog.Exceptions" ],
    "Enrich": [ "WithExceptionDetails" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.Hosting.Lifetime": "Error"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": { "expression": "@mt = 'An unhandled exception has occurred while executing the request.'" }
      }
    ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./bin/logs/Logs.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ]
  },
  "Metric": {
    "StandAloneKestrelServerEnabled": false,
    "Port": 5025,
    "Url": "/metrics",
    "Hostname": "+",
    "HttpMetricsEnabled": true,
    "SuppressDefaultMetrics": false
  },
  "Caching": {
    "CacheTimeInMinutes": 60,
    "Enabled": true
  }
}